{
  "compilerOptions": {
    "esModuleInterop": true,
    "module": "commonjs",
    "target": "es2017",
    "outDir": "dist",
    "baseUrl": "./src",
    "paths": {
      "@providers/*": ["providers/*"],
      "@repositories/*": ["repositories/*"],
      "@entities/*": ["entities/*"],
      "@services/*": ["services/*"],
      "@validators/*": ["validators/*"],
      "@middlewares/*": ["middlewares/*"]
    }
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*.ts"]
}
